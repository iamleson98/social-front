		"@iconify-json/system-uicons": "^1.1.12",
		"@iconify/tailwind": "^1.1.1",
		"@kitql/graphql-codegen": "^0.5.4",
		"@melt-ui/pp": "^0.3.2",
		"@melt-ui/svelte": "^0.77.0",
		"@neoconfetti/svelte": "^1.0.0",
		"@next/env": "^14.2.3",
		"@playwright/test": "^1.44.0",
