		"test:integration": "playwright test",
		"test:unit": "vitest",
		"pull-schema": "houdini pull-schema",
		"generate": "graphql-codegen --config .graphqlrc.ts"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
